{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
